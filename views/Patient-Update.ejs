<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Information</title>
    <link rel="stylesheet" href="../css/Patient-Signup.css">
    <link rel="stylesheet" href="../css/Components.css">
    <link rel="shortcut icon" href="../images/logo.jpg" type="image/x-icon">
</head>
<body>
    <div class="container">
        <h1>Update Your Medical Information</h1>
        <br><br>
        <form action="/patient/update" method="post">
            <div class="form-group">
                <div class="name-group">
                    <div class="half">
                        <label for="age">Age:</label>
                        <input type="number" name="age" id="age" required>
                    </div>
                    <div class="half">
                        <label for="Height">Height (meters):</label>
                        <input type="number" id="height" name="height" step="0.01" min="0.00" max="2.50" required>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="name-group">
                    <div class="half">
                        <label for="Weight">Weight (kg):</label>
                        <input type="number"name="Weight" id="Weight" required>

                    </div>
                    <div class="half">
                        <label for="Allergies">Allergies:</label>
                        <input type="text" id="Allergies" name="Allergies" required>
                    </div>
                </div>   
            </div>

            <div class="form-group" id="disease">
                <div class="input_len_e">
                    <label for="disease">Disease:</label>
                    <input type="text" id="disease" name="disease" required>
                </div>
            </div>

            <!-- Medical history fields -->
            <div class="form-group" id="medical-history-fields">
                <div class="input_len_e">
                    <label for="medicalHistory">Medical History 1:</label>
                    <textarea id="medicalHistory1" name="medicalHistory" rows="4" required></textarea>
                    <label for="treatment1">Treatment:</label>
                    <input type="text" id="treatment1" name="treatment" required>
                </div>
            </div>

            <!-- Button to add more medical history fields -->
            <button type="button" id="addMoreMedicalHistory" class="add">Add More</button>
            <br>
            <h2>Emergency Contact Information</h2>
            <div class="form-group">
                <label for="contactName">Contact Name:</label>
                <input type="text" id="contactName" name="contactName" required>
            </div>
            <div class="form-group">
                <label for="contactPhoneNumber">Contact Phone Number:</label>
                <input type="tel" id="contactPhoneNumber" name="contactPhoneNumber" required>
            </div>
            <div class="form-group">
                <label for="contactEmail">Contact Email:</label>
                <input type="email" id="contactEmail" name="contactEmail" required>
            </div>
            
            <button type="submit">Update Information</button>
        </form>
        <p>Return to <a href="profile.html">Profile</a></p>
    </div>

    <!-- JavaScript for adding more medical history fields -->
    <script>
        let medicalHistoryCount = 1;
        const addButton = document.getElementById('addMoreMedicalHistory');
        addButton.addEventListener('click', () => {
            medicalHistoryCount++;
            const container = document.getElementById('medical-history-fields');
            const newField = document.createElement('div');
            newField.innerHTML = `
                <div class="input_len_e">
                    <label for="medicalHistory">Medical History ${medicalHistoryCount}:</label>
                    <textarea id="medicalHistory${medicalHistoryCount}" name="medicalHistory" rows="4" required></textarea>
                    <label for="treatment${medicalHistoryCount}">Treatment:</label>
                    <input type="text" id="treatment${medicalHistoryCount}" name="treatment" required>
                </div>
            `;
            container.appendChild(newField);
        });
    </script>
</body>
</html>
