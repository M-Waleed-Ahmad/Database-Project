<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <link rel="stylesheet" href="../css/patientinfo.css">
    <link rel="shortcut icon" href="../images/logo.jpg" type="image/x-icon">
</head>
<body>
    <div class="container">
        <h1>Your  Basic Medical Information</h1>
        <br><br>
        <form action="" method="post">
            <div class="form-group">
                <div class="name-group">
                    <div class="half">
                        <label for="age">Age:</label>
                     <select id="age" name="age" required>
                    <option value="yourage">Your age</option>
                     <option value="infant">infant</option>
                     <option value="onetoten">1-10</option>
                     <option value="evltotwn">11-20</option>
                     <option value="twn1tothir">21-30</option>
                     <option value="thir1tofor">31-40</option>
                     <option value="for1tofif">41-50</option>
                     <option value="fif1tosixt">51-60</option>
                     <option value="six1tosevn">61-70</option>
                     <option value="aboveseventy">70 above</option>
                     </select>
                    </div>
                    <div class="half">
                        <label for="Height">Height (meters):</label>
                        <input type="number" id="height" name="height" step="0.01" min="0.00" max="2.50" required>
                        
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="name-group">
                    <div class="half">
                        <label for="Weight">Weight (kg):</label>
                     <select id="weight" name="weight" required>
                    <option value="yourweight">Your weight</option>
                     <option value="onetoten">1-10</option>
                     <option value="evltotwn">11-20</option>
                     <option value="twn1tothir">21-30</option>
                     <option value="thir1tofor">31-40</option>
                     <option value="for1tofif">41-50</option>
                     <option value="fif1tosixt">51-60</option>
                     <option value="six1tosevn">61-70</option>
                     <option value="sevn1toeig">71-80</option>
                     <option value="eig1tonin">81-90</option>
                     <option value="nin1tohun">91-100</option>
                     <option value="abovehun">100 above</option>
                     </select>
                    </div>
                    <div class="half">
                        <label for="Allergies">Allergies:</label>
                        <input type="text" id="Allergies" name="Allergies"  required>
                        
                    </div>
                </div>
                   
            </div>
            <div class="form-group" id="disease">
                <div class="input_len_e">
                    <label for="disease">Disease:</label>
                    <input type="text" id="disease" name="disease" required>
                </div>
            </div>
            <div class="form-group" id="medical-history-fields">
                <div class="input_len_e">
                    <label for="medicalHistory">Medical History 1:</label>
                    <textarea id="medicalHistory1" name="medicalHistory" rows="4" required></textarea>
                    <label for="treatment1">Treatment:</label>
                    <input type="text" id="treatment1" name="treatment" required>
                </div>
            </div>
            <button type="button" id="waleed" class="add">Add More</button>
         <br>
            
            <button type="submit">Sign Up</button>
        </form>
        <p>Already have an account? <a href="login.html">Log in</a></p>
    </div>
    <script >
        let medicalHistoryCount = 1;
        const as=document.getElementById('waleed');
        as.addEventListener('click',()=>{
            medicalHistoryCount++;
            const container = document.getElementById('medical-history-fields');
            const newField = document.createElement('div');
            newField.innerHTML = `
                <div class="input_len_e">
                    <label for="medicalHistory">Medical History ${medicalHistoryCount}:</label>
                    <textarea id="medicalHistory${medicalHistoryCount}" name="medicalHistory" rows="4" required></textarea>
                    <label for="treatment${medicalHistoryCount}">Treatment:</label>
                    <input type="text" id="treatment${medicalHistoryCount}" name="treatment" required>
                </div>
            `;
            container.appendChild(newField);
        }) 
    </script>
</body>
</html>
